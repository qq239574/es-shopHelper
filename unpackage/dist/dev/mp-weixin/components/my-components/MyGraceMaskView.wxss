.grace-mask {
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 1;
}
.grace-mask-view {
  width: 100%;
  position: fixed;
  left: 0;
  top: 50%;
  bottom: 0;
  background: #fff;
  border-top-left-radius: 30px;
  border-top-right-radius: 30px;
  z-index: 99;
}
.grace-mask-view-content {
  width: 100%;
  border-radius: 5px;
  height: 100%;
}
.grace-mask-view-content .top {
    position: relative;
    width: 100%;
    height: 63rpx;
}
.grace-mask-view-content .top:after {
      content: '';
      width: 80rpx;
      height: 12rpx;
      position: absolute;
      left: 0;
      right: 0;
      margin: auto;
      bottom: 15rpx;
      border-radius: 6rpx;
      background: #eee;
}

