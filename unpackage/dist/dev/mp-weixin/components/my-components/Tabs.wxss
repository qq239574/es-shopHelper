.my-tabs {
  width: 100%;
  margin: 0 0 20rpx;
}
.my-tabs .grace-tab-title {
    width: 100%;
    border-bottom: 1rpx solid #eee;
    padding: 0 20rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
}
.my-tabs .grace-tab-title__item {
    color: #ccc;
    border: none;
    font-size: 24rpx;
    margin: 0;
}
.grace-tab-current {
  color: #000 !important;
  border: none !important;
  font-size: 30rpx !important;
  font-weight: 600;
  position: relative;
}
.grace-tab-current:after {
    position: absolute;
    bottom: -1rpx;
    content: '';
    background: #fb6638;
    height: 4rpx;
    width: 42rpx;
    left: 0;
    right: 0;
    margin: auto;
    border-radius: 2rpx;
}

