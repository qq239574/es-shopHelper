.echarts .echarts-block {
  width: 100%;
  height: 440rpx;
  background: #fff;
  margin: 20rpx 0;
}
.echarts .echarts-block .ec-canvas {
    width: 100% !important;
    height: 100% !important;
}
.echarts .block {
  width: 100%;
  height: 158rpx;
  background: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-bottom: 20rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-flex-wrap: nowrap;
      -ms-flex-wrap: nowrap;
          flex-wrap: nowrap;
}
.echarts .block .item {
    width: 50%;
    height: 100%;
}
.echarts .block .item .num,
    .echarts .block .item .title {
      width: 100%;
      text-align: center;
}
.echarts .block .item .num {
      font-size: 36rpx;
      height: 36rpx;
      line-height: 36rpx;
      color: #333;
      font-weight: 600;
      margin: 47rpx auto 20rpx;
}
.echarts .block .item .title {
      font-size: 20rpx;
      height: 20rpx;
      line-height: 20rpx;
      color: #9ea3ae;
}
.echarts .dataTable {
  width: 100%;
  background: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
}
.echarts .dataTable .tablerow {
    width: 710rpx;
    margin: auto;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-wrap: nowrap;
        -ms-flex-wrap: nowrap;
            flex-wrap: nowrap;
    height: 68rpx;
}
.echarts .dataTable .tablerow .td {
      height: 100%;
      width: 50%;
      text-align: center;
      line-height: 68rpx;
}
.echarts .dataTable .tablerow:nth-child(even) {
      background-color: #fff7f5;
}
.echarts .pager {
  width: 100%;
  background: #fff;
  padding: 0 0 150rpx;
}

